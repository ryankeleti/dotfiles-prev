function ip-get {
    echo -n "Wired:    "
    ip addr show eth0 | grep inet | awk '{print $2}' | tr "\n" " " | cut -f1 -d"/"
    echo -n "Wireless: "
    ip addr show wlan0 | grep inet | awk '{print $2}' | tr "\n" " " | cut -f1 -d"/"
    echo -n "Public:   "
    curl http://icanhazip.com/
}
