client.unfocused          $inact_bg     $inact_bg    $inact_txt   #00ff00
client.focused_inactive   $inact_bg     $inact_bg    $inact_txt   #00ff00
client.urgent             $urg_bg       $urg_bg      $txt_clr     #00ff00
