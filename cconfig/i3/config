# brightness
bindsym $mod+F7 exec xbacklight -inc 5
bindsym $mod+F6 exec xbacklight -dec 5

bindsym $mod+Escape exec i3lock

gaps inner 30
gaps outer 4
for_window [class="^.*"] border pixel 1 

exec_always xfce4-power-manager &
